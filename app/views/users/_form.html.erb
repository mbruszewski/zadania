<%= form_for @user do |f| %>
  <%= f.error_messages %>
  <p>
    <%= f.label :login %><br/>
    <%= f.text_field :login %>
  </p>
  <p>
    <%= f.label :password %><br/>
    <%= f.password_field :password %>
  </p>
  <p>
    <%= f.label :password_confirmation %><br/>
    <%= f.password_field :password_confirmation %><br/>
  </p>
  <p>
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :surname %><br />
    <%= f.text_field :surname %>
  </p>
  <p><%= f.submit 'Submit', class: 'button' %></p>
<% end %>
